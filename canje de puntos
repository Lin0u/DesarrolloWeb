<body>

  <div class="container">
    <h2>Puntos de canje</h2>
    <p class="points">Cantidad de puntos total : <span id="totalPuntos">50000</span></p>
    <h3>Disponible:</h3>

    <div class="products">
      <div class="card">
        <img src="https://via.placeholder.com/200x150?text=Pollo+%26+Vegetales" alt="Bowl de Pollo">
        <p>Bowl de Pollo y Vegetales</p>
        <p class="points-cost">9999 pts</p>
        <button onclick="canjear(9999)">Canjear</button>
      </div>
      <div class="card">
        <img src="https://via.placeholder.com/200x150?text=Salmon+Energia" alt="Bowl de Salmón">
        <p>Bowl de Salmón Energía</p>
        <p class="points-cost">100000 pts</p>
        <button onclick="canjear(100000)">Canjear</button>
      </div>
      <div class="card">
        <img src="https://via.placeholder.com/200x150?text=Tofu+Budha" alt="Bowl Tofu">
        <p>Bowl Tofu Budha Equilibrio</p>
        <p class="points-cost">77777 pts</p>
        <button onclick="canjear(77777)">Canjear</button>
      </div>
    </div>
  </div>

  <!-- Modal -->
  <div id="modal" class="modal">
    <div class="modal-content">
      <p id="mensaje"></p>
      <button onclick="cerrarModal()">Ok</button>
    </div>
  </div>

  <script>
    let puntos = 50000; // puntos iniciales

    function canjear(costo) {
      const modal = document.getElementById("modal");
      const mensaje = document.getElementById("mensaje");

      if (puntos >= costo) {
        puntos -= costo;
        document.getElementById("totalPuntos").textContent = puntos;
        mensaje.textContent = "✅ ¡Canje exitoso!";
      } else {
        mensaje.textContent = "❌ Puntos insuficientes";
      }

      modal.style.display = "flex";
    }

    function cerrarModal() {
      document.getElementById("modal").style.display = "none";
    }
  </script>
