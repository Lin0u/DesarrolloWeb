  <header>FitExpress - Seguimiento de Pedido</header>

  <div class="contenedor">
    <!-- Imagen del mapa (funciona online con Unsplash) -->
    <img class="mapa" 
         src="https://images.unsplash.com/photo-1502920917128-1aa500764b0e?w=800" 
         alt="Mapa de entrega">

    <div class="info"><strong>Duración:</strong> 15 minutos</div>
    <div class="info"><strong>Distancia:</strong> 1.7 mi</div>
    <div class="info"><strong>Estado:</strong> En proceso</div>

    <div class="botones">
      <button class="error" onclick="mostrarModal('error')">Simular Error</button>
      <button class="exito" onclick="mostrarModal('exito')">Simular Entrega</button>
    </div>
  </div>

  <!-- Modal -->
  <div id="modal" class="modal">
    <div class="modal-contenido">
      <h3>Estado del pedido</h3>
      <p id="mensaje"></p>
      <button onclick="cerrarModal()">Ok</button>
    </div>
  </div>

  <script>
    function mostrarModal(tipo) {
      let mensaje = "";
      if (tipo === "error") {
        mensaje = "Error en el despacho, el pedido se demorará más de lo estimado";
      } else if (tipo === "exito") {
        mensaje = "Pedido entregado exitosamente";
      }
      document.getElementById("mensaje").innerText = mensaje;
      document.getElementById("modal").style.display = "flex";
    }

    function cerrarModal() {
      document.getElementById("modal").style.display = "none";
    }
  </script>

