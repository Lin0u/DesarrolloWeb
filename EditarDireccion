  <!-- Modal -->
  <div id="modal" class="modal">
    <div class="modal-content">
      <h4>Mis direcciones</h4>
      <p id="mensaje"></p>
      <button onclick="cerrar()">Ok</button>
    </div>
  </div>

  <script>
    function abrirModal(tipo) {
      let mensaje = document.getElementById("mensaje");
      if (tipo === 'add') {
        // simulamos éxito o error
        let exito = Math.random() > 0.5;
        if (exito) {
          mensaje.textContent = "Ubicación añadida exitosamente";
        } else {
          mensaje.textContent = "Error de ubicación";
        }
      }
      if (tipo === 'delete') {
        mensaje.textContent = "Se eliminó exitosamente esta dirección";
      }
      document.getElementById("modal").style.display = "flex";
    }

    function cerrar() {
      document.getElementById("modal").style.display = "none";
    }
  </script>

