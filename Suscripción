    function confirmar() {
      const mensaje = document.getElementById("mensaje");

      // Simulaci√≥n de √©xito o error
      const exito = Math.random() > 0.3; // 70% prob √©xito

      if (exito) {
        mensaje.textContent = "¬°Suscripci√≥n exitosa! Se te cobrar√° semanalmente.";
        mensaje.classList.remove("error");
      } else {
        mensaje.textContent = "Error en la suscripci√≥n, int√©ntelo de nuevo.";
        mensaje.classList.add("error");
      }

      mensaje.style.display = "block";
    }
