    <h3>Mi perfil</h3>

    <div class="campo">
      <span>Nombre: xxxxxx</span>
      <button onclick="guardar(true)">Editar</button>
    </div>

    <div class="campo">
      <span>Correo electrónico: xxxxxx</span>
      <button onclick="guardar(false)">Editar</button>
    </div>

    <div class="campo">
      <span>Número: xxxxxx</span>
      <button onclick="guardar(true)">Editar</button>
    </div>
  </div>

  <!-- Modal -->
  <div id="modal" class="modal">
    <div class="modal-content">
      <p id="mensaje"></p>
      <button onclick="cerrar()">Ok</button>
    </div>
  </div>

  <script>
    function guardar(exito) {
      let mensaje = document.getElementById("mensaje");
      if (exito) {
        mensaje.textContent = "✅ Cambio exitoso";
      } else {
        mensaje.textContent = "❌ Error, inténtelo de nuevo";
      }
      document.getElementById("modal").style.display = "flex";
    }

    function cerrar() {
      document.getElementById("modal").style.display = "none";
    }
  </script>
