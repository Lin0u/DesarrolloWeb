    <h2>Estado de mi pedido</h2>

    <div class="timeline">
      <div class="estado" id="cocinando" onclick="cambiarEstado(0)">
        <div class="estado-icon">üë®‚Äçüç≥</div>
        <div class="estado-label">Cocin√°ndose</div>
      </div>
      <div class="estado" id="despacho" onclick="cambiarEstado(1)">
        <div class="estado-icon">‚è≥</div>
        <div class="estado-label">Esperando despacho</div>
      </div>
      <div class="estado" id="enviado" onclick="cambiarEstado(2)">
        <div class="estado-icon">üöö</div>
        <div class="estado-label">Enviado</div>
      </div>
    </div>

    <div id="mensaje" class="mensaje">üë®‚Äçüç≥ Su pedido est√° en preparaci√≥n.</div>
  </div>

  <script>
    let estados = [
      { nombre: "Cocin√°ndose", mensaje: "üë®‚Äçüç≥ Su pedido est√° en preparaci√≥n." },
      { nombre: "Esperando a despacho", mensaje: "‚è≥ Su pedido ya est√° listo, a espera de despacho." },
      { nombre: "Pedido ya enviado", mensaje: "üöö Su pedido fue enviado, pronto llegar√°." }
    ];

    let estadoActual = 0;
    let interval;

    function mostrarEstado() {
      // Resetear todos
      document.querySelectorAll(".estado").forEach(e => e.classList.remove("active"));
      // Activar el actual
      document.querySelectorAll(".estado")[estadoActual].classList.add("active");
      // Mensaje principal
      document.getElementById("mensaje").innerText = estados[estadoActual].mensaje;

      // Alerts simulando escenarios Esc1 y Esc2
      if (estadoActual === 1) {
        alert("Su pedido ya est√° listo, a espera de despacho");
      }
      if (estadoActual === 2) {
        alert("Pedido ya enviado. ¬øDesea ver m√°s detalles?");
      }
    }

    function cambiarEstado(index) {
      estadoActual = index;
      mostrarEstado();
      clearInterval(interval); // Si el usuario cambia manualmente, se detiene el auto
    }

    function avanzarEstado() {
      if (estadoActual < estados.length - 1) {
        estadoActual++;
        mostrarEstado();
      } else {
        clearInterval(interval);
      }
    }

    // Simulaci√≥n: cambiar estado autom√°ticamente cada 5s
    window.onload = () => {
      mostrarEstado();
      interval = setInterval(avanzarEstado, 5000);
    };
  </script>
